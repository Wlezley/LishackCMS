<table id="redirectListTable" class="table table-responsive table-striped table-hover table-dark">
    <thead>
        <tr>
            <th scope="col" class="url-col">{$_('source-url')}</th>
            <th scope="col" class="url-col">{$_('target-url')}</th>
            <th scope="col" class="text-center http-code-col">{$_('http-code')}</th>
            <th scope="col" class="text-center http-code-col">{$_('active')}</th>
            <th scope="col" class="text-center ps-0 action-col">{$_('action')}</th>
        </tr>
    </thead>
    <tbody>
    {foreach $redirectList as $source => $redirectItem}
        <tr>
            <td class="align-middle url-col"><a href="{$redirectItem['source']}" target="_blank" rel="noopener">{$redirectItem['source']} <sup class="fa-solid fa-up-right-from-square text-secondary"></sup></a></td>
            <td class="align-middle url-col"><a href="{$redirectItem['target']}" target="_blank" rel="noopener">{$redirectItem['target']} <sup class="fa-solid fa-up-right-from-square text-secondary"></sup></a></td>
            <td class="align-middle text-center http-code-col">{$redirectItem['code']}</td>
            <td class="align-middle text-center http-code-col">{$redirectItem['enabled'] ? $_('yes') : $_('no')}</td>
            <td class="align-middle text-end ps-0 py-1 action-col">
                <a n:href=":edit, source: $source" class="btn btn-sm btn-primary me-1">
                    <i class="fa-solid fa-pencil"></i>
                </a>
                <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteRedirectConfirmModal" data-json="{$getJson($source)}">
                    <i class="fa-solid fa-eraser"></i>
                </button>
            </td>
        </tr>
    {/foreach}
    </tbody>
</table>

{control pagination}

<script n:syntax="off">
    document.addEventListener('DOMContentLoaded', () => {
        const RedirectDeleteModal = new LishackCMS.AdminModal('#deleteRedirectConfirmModal', 'data-json');
        RedirectDeleteModal.init();
    });
</script>

{* {define modals} *}
    <div class="modal fade" id="deleteRedirectConfirmModal" tabindex="-1" aria-labelledby="deleteRedirectConfirmModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered text-dark">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteRedirectConfirmModalLabel"><!-- MODAL TITLE --></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Zavřít"></button>
                </div>
                <div class="modal-body">
                    <!-- MODAL BODY -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Zrušit</button>
                    <button type="submit" class="btn btn-danger" data-modal-action="delete">Smazat</button>
                </div>
            </div>
        </div>
    </div>
{* {/define} *}
