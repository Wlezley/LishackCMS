<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=1">
    <title>{ifset $title}{$title|stripHtml} | {/ifset}Lishack CMS</title>
    <meta name="robots" content="noindex, nofollow">
    <meta name="author" content="Ladislav Alexa, www.lishack.cz">
    <link rel="shortcut icon" type="image/x-icon" href="{$baseUrl}/favicon.ico">

    <script src="https://kit.fontawesome.com/ae360af17e.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="{$baseUrl}/assets/admin/style.css">
</head>

<body class="bg-dark text-white h-100">
    <main>
        {if $user->isLoggedin()}
            <div class="wrapper">
                {include 'layout/sidebar.latte'}

                <div class="main">
                    <main class="content pb-3 fullsize" id="content">
                        <nav class="navbar navbar-expand px-3 bg-dark border-bottom border-secondary fixed-top fullsize" id="menu-switch">
                            <button class="btn" type="button" data-bs-theme="dark">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                        </nav>

                        <div class="container-fluid mt-2 mb-5">
                            <div class="bg-secondary">
                                <div class="px-3">
                                    <h1 class="pt-3 mb-4 border-bottom border-warning text-warning">{ifset $title}{$title|stripHtml}{else}Lishack CMS{/ifset}</h1>

                                    {include 'layout/alerts.latte'}

                                    <div class="pb-4">
                                        {include content}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </main>
                </div>

            </div>
        {else}
            {include content}
        {/if}
    </main>

    {include 'layout/footer.latte'}

    {block scripts}
        <script src="https://nette.github.io/resources/js/3/netteForms.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
        {* <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script> *}

        <script src="{$baseUrl}/assets/admin/script.js"></script>
    {/block}
</body>
</html>
