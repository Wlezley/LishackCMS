<!DOCTYPE html>
<html lang="{if $lang=='cz'}cs{else}{$lang}{/if}">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=1">
    <title>{$title}</title>
    <meta name="description" content="{$seo_description|striptags|truncate:150|trim}">
    <meta name="robots" content="{$seo_robots}">
    <meta name="author" content="Ladislav Alexa, www.lishack.cz">
    <meta property="og:title" content="{$title}">
    <meta property="og:description" content="">
    <meta property="og:image" content="">
    <meta property="og:url" content="{$currentUrl}">
    <meta property="og:type" content="website">
    <link rel="shortcut icon" type="image/x-icon" href="{$baseUrl}/favicon.ico">
    <link rel="canonical" href="{$seo_canonical}">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <div n:foreach="$flashes as $flash" n:class="flash, $flash->type">{$flash->message}</div>

    {control menu}

    {include content}

    {control adminButton}

    {block scripts}
    <script src="https://nette.github.io/resources/js/3/netteForms.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
    {* <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script> *}
    {/block}
</body>
</html>
